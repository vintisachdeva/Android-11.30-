<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmpl.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:id="@+id/androidTextView"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/androidTextView"
        android:text="World"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/androidTextView"
        android:layout_marginTop="20dp"
        android:id="@+id/worldTextView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/worldTextView2"
        android:layout_below="@+id/androidTextView"
        android:layout_marginTop="12dp"
        android:id="@+id/editText2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:text="Submit" />

</RelativeLayout>
